#include <Servo.h>

Servo servoMotor;

int potPin = A0;
int servoPin = 6;
int threshold = 900; 

void setup() {
  Serial.begin(9600);
  servoMotor.attach(servoPin);
}

void loop() {
  int value = analogRead(potPin);

  if (value >= threshold) {
    servoMotor.write(90);  
    Serial.println("FULL");
    delay(2000);
  } else {
    servoMotor.write(0);  
  }

  delay(100);
}
